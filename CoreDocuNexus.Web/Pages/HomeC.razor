@page "/home-c"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
    <MudPaper Class="pa-6" Style="background-color: #f5f5f5; border-radius: 12px;">
        
        <!-- ヘッダー部分 -->
        <MudGrid Justify="Justify.Center" Class="mb-4">
            <MudItem xs="12">
                <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-2" Style="font-weight: bold; color: #333;">
                    <MudIcon Icon="@Icons.Material.Filled.Star" Style="color: #4285f4; margin-right: 8px;" />
                    パスガ PDF (PassGa PDF)
                </MudText>
            </MudItem>
        </MudGrid>

        <!-- サービス説明 -->
        <MudGrid Justify="Justify.Center" Class="mb-6">
            <MudItem xs="12">
                <MudText Typo="Typo.body1" Align="Align.Center" Style="line-height: 1.8; color: #666;">
                    そのPDF、パスガ済み？パスッと決めて、ガシッと守る。<br/>
                    「パスッと設定、ガシッとガード」をコンセプトに、PDFのパスワード管理にまつわるあらゆる手間を解消し、あなたの時間を守ります。
                </MudText>
            </MudItem>
        </MudGrid>

        <!-- ドラッグ&ドロップエリア -->
        <MudGrid Justify="Justify.Center" Class="mb-4">
            <MudItem xs="12">
                <MudPaper Class="pa-8" 
                         Style="border: 3px dashed #4285f4; 
                                background-color: white; 
                                border-radius: 8px; 
                                min-height: 200px; 
                                display: flex; 
                                flex-direction: column; 
                                justify-content: center; 
                                align-items: center;">
                    
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-4" Style="color: #333; font-weight: 500;">
                        PDFファイルをこちらにドラッグ＆ドロップして下さい
                    </MudText>

                    <!-- 区切り線 -->
                    <MudDivider Class="my-4" Style="width: 100%;">
                        <MudDividerLabel>
                            <MudText Typo="Typo.body2" Style="color: #999;">
                                または
                            </MudText>
                        </MudDividerLabel>
                    </MudDivider>

                    <!-- ファイル選択ボタン -->
                    <MudButton Variant="Variant.Filled" 
                              Color="Color.Primary" 
                              StartIcon="@Icons.Material.Filled.Description"
                              Size="Size.Large"
                              Style="padding: 12px 32px; font-size: 16px; border-radius: 8px;">
                        ファイルを選択
                    </MudButton>

                </MudPaper>
            </MudItem>
        </MudGrid>

        <!-- ダウンロードボタン -->
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="6" md="4">
                <MudButton Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          StartIcon="@Icons.Material.Filled.Download"
                          FullWidth="true"
                          Size="Size.Large"
                          Style="padding: 16px; font-size: 18px; border-radius: 8px;">
                    ダウンロード
                </MudButton>
            </MudItem>
        </MudGrid>

    </MudPaper>
</MudContainer>

<style>
    .mud-button {
        text-transform: none !important;
    }
    
    .mud-paper {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1) !important;
    }
    
    .mud-container {
        margin-top: 40px;
    }
</style>